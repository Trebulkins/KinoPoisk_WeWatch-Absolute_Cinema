<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/kinopoisk_white_color_square_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kinopoisk_white_color_square_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Absolute_CinemaКинопоиск_WeWatch"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AddMovieActivity"
            android:label="Add Movie">
        </activity>

        <activity android:name=".SearchActivity"
            android:label="Search Results">
        </activity>
    </application>

</manifest>